{
  "name": "dripip",
  "version": "0.0.0-see-git-tags",
  "description": "Opinionated CLI for continuous delivery of npm packages",
  "main": "dist/main",
  "bin": {
    "dripip": "dist/main.js"
  },
  "repository": "git@github.com:prisma-labs/dripip.git",
  "author": "Jason Kuhrt <jasonkuhrt@me.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "/src",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "format": "prettier --write '*/**/*.ts'",
    "dripip": "ts-node src/main",
    "clean": "rm -rf dist oclif.manifest.json",
    "build:oclif": "oclif-dev manifest",
    "build": "yarn -s build:oclif && tsc",
    "dev": "tsdx watch",
    "dev:test:unit": "tsdx test --testPathPattern '.*/unit/.*'",
    "test:unit": "CI=true tsdx test --color --testPathPattern '.*/unit/.*'",
    "test:system": "CI=true tsdx test --color --testTimeout 10000 --testPathPattern '.*/system/.*'",
    "test": "CI=true tsdx test --color --testTimeout 10000",
    "build:doc:toc": "doctoc README.md",
    "build:doc:commands": "oclif-dev readme",
    "build:doc": "yarn -s build:doc:commands && yarn -s build:doc:toc",
    "postpublish": "yarn -s run clean",
    "prepublishOnly": "yarn -s run build"
  },
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-help": "^2.2.1",
    "@octokit/rest": "^16.35.2",
    "@types/parse-git-config": "^3.0.0",
    "@types/parse-github-url": "^1.0.0",
    "common-tags": "^1.8.0",
    "globby": "^10.0.1",
    "parse-git-config": "^3.0.0",
    "parse-github-url": "^1.0.2",
    "request": "^2.88.0",
    "semver": "^7.1.1",
    "simple-git": "^1.126.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.2",
    "@types/common-tags": "^1.8.0",
    "@types/jest": "^24.0.21",
    "@types/node": "^13.1.2",
    "@types/semver": "^6.2.0",
    "@types/tmp": "^0.1.0",
    "doctoc": "^1.4.0",
    "fs-jetpack": "^2.2.3",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "tmp": "^0.1.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tsdx": "^0.12.0",
    "typescript": "^3.6.4"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "dripip",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
