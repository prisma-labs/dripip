{
  "name": "dripip",
  "version": "0.0.0-dripip",
  "description": "Opinionated CLI for continuous delivery of npm packages",
  "main": "dist/cli/main",
  "bin": "dist/cli/main.js",
  "repository": "git@github.com:prisma-labs/dripip.git",
  "packageManager": "yarn@3.2.0",
  "author": "Jason Kuhrt <jasonkuhrt@me.com>",
  "license": "MIT",
  "files": [
    "/src",
    "/dist"
  ],
  "scripts": {
    "release:stable": "yarn dripip stable",
    "release:preview": "yarn dripip preview",
    "release:pr": "yarn  dripip pr",
    "format": "prettier --write .",
    "dripip": "ts-node src/cli/main",
    "clean": "rm -rf dist",
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:test": "jest --watch --testPathPattern '.*/src/.*'",
    "test:unit": "jest --testPathPattern '.*/src/.*' --verbose",
    "test:system": "jest --testTimeout 15000 --testPathPattern '.*/tests/.*' --verbose",
    "test": "jest  --testTimeout 15000 --verbose",
    "build:docs:toc": "doctoc README.md",
    "build:docs": "yarn build:docs:commands && yarn build:docs:toc",
    "postpublish": "yarn run clean",
    "prepublishOnly": "yarn run build"
  },
  "dependencies": {
    "@octokit/rest": "^18.12.0",
    "@types/debug": "^4.1.7",
    "@types/parse-git-config": "^3.0.1",
    "@types/parse-github-url": "^1.0.0",
    "chaindown": "^0.1.0-next.2",
    "chalk": "^4.1.0",
    "common-tags": "^1.8.0",
    "debug": "^4.3.1",
    "execa": "5",
    "fs-jetpack": "^4.3.1",
    "isomorphic-git": "^1.8.0",
    "parse-git-config": "^3.0.0",
    "parse-github-url": "^1.0.2",
    "request": "^2.88.2",
    "simple-git": "^2.23.0",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@prisma-labs/prettier-config": "0.1.0",
    "@types/common-tags": "1.8.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@types/tmp": "0.2.3",
    "doctoc": "1.4.0",
    "jest": "27.5.1",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-toggle-config": "2.0.1",
    "jest-watch-typeahead": "1.0.0",
    "prettier": "2.5.1",
    "strip-ansi": "6.0.0",
    "tmp": "0.2.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.6.0",
    "type-fest": "2.12.0",
    "typescript": "4.6.2"
  },
  "prettier": "@prisma-labs/prettier-config",
  "jest": {
    "preset": "ts-jest",
    "watchPlugins": [
      "jest-watch-suspend",
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname",
      [
        "jest-watch-toggle-config",
        {
          "setting": "verbose"
        }
      ]
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "setupFiles": [
      "./tests/_setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tests/tsconfig.json",
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  }
}
